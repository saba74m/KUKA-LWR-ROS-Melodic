<launch>
    <arg name="rviz_config" default="true"/>
    
    
    <!-- Add planning context launch file -->
    <include file="$(find kuka_moveit)/launch/planning_context.launch">
        <arg name="load_robot_description" value="false"/>
    </include>
    
    <include file="$(find kuka_moveit)/launch/move_group.launch">
        <arg name="allow_trajectory_execution" value="true"/>
        <arg name="fake_execution" value="false"/>
    </include>
    
    <include file="$(find kuka_moveit)/launch/moveit_rviz.launch">
        <arg name="rviz_config" value="$(arg rviz_config)" />
    </include>
    
</launch>